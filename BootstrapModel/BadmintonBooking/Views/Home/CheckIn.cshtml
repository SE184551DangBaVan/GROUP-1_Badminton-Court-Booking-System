@using Microsoft.AspNetCore.Identity
@model IEnumerable<BadmintonBooking.Models.Booking>
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "CheckIn";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourAppName</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .header {
        text-align: center;
        padding: 20px;
        background-color: #007bff;
        color: white;
        margin-bottom: 20px;
    }

        .header h1 {
            margin: 0;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 10px;
        width: calc(20% - 20px); /* Ensures 5 cards fit within the container */
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            border-radius: 8px 8px 0 0;
            width: 100%;
            height: 150px; /* Adjust height as needed */
            object-fit: cover;
        }

    .card-content {
        padding: 10px;
    }

        .card-content h3 {
            margin: 0;
            font-size: 18px; /* Adjust font size as needed */
        }

        .card-content p {
            margin: 5px 0;
            color: #555;
            font-size: 14px; /* Adjust font size as needed */
        }

    .btn {
        display: block;
        text-align: center;
        background-color: #007bff;
        color: white;
        padding: 8px;
        border-radius: 5px;
        text-decoration: none;
        margin-top: 10px;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>CheckIn</h1>
    </div>
    <div class="search-form">

        <form method="get" action="@Url.Action("Checkin", "Home")">
            <input type="text" name="searchTerm" placeholder="Search by keyword..." />
            <input type="hidden" name="CourtID" value="@ViewBag.CourtID" />
            <button type="submit">Search</button>
        </form>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort By
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/home/checkin?courtId=@ViewBag.CourtID&searchTerm=@ViewBag.SearchTerm&sortOrder=recent_Booking">Newest Booking</a>
                    <a class="dropdown-item" href="/home/checkin?courtId=@ViewBag.CourtID&searchTerm=@ViewBag.SearchTerm&sortOrder=old_Booking">Old Booking</a>
                    <a class="dropdown-item" href="/home/checkin?courtId=@ViewBag.CourtID&searchTerm=@ViewBag.SearchTerm&sortOrder=name_Asc">Name Ascending</a>
                    <a class="dropdown-item" href="/home/checkin?courtId=@ViewBag.CourtID&searchTerm=@ViewBag.SearchTerm&sortOrder=name_Desc">Name Descending</a>
            </div>
        </div>
    </div>

    <div class="card-container">
        @foreach (var item in Model)
        {
            <div class="card">
                <img src="~/Upload/Image/@item.Co.CoPath" alt="Court Image" />
                <div class="card-content">
                    <h3>Booking ID: @Html.DisplayFor(modelItem => item.BId)</h3>
                    <p>Court Name: @Html.DisplayFor(modelItem => item.Co.CoName)</p>
                    <p>Address : @Html.DisplayFor(modelItem => item.Co.CoAddress)</p>
                    <p>Type of Booking: @Html.DisplayFor(modelItem => item.BBookingType)</p>
                    <!-- <p>Total hours: @Html.DisplayFor(modelItem => item.BTotalHours)</p>-->
                    @if (item.TimeSlots != null && item.TimeSlots.Count > 0)
                    {
                        int checkedInCount = 0;

                        @foreach (var timeslot in item.TimeSlots)
                        {
                            @if (timeslot.TsCheckedIn)
                            {
                                checkedInCount++;
                            }

                        }

                        <p>Number of Checked-In: <b> @checkedInCount /@item.TimeSlots.Count()</b></p>
                    }
                    else
                    {
                        <p>No Time Slots found.</p>
                    }


                    @{
                        DemobadmintonContext context = new DemobadmintonContext();
                        var username = context.AspNetUsers.FirstOrDefault(a => a.Id == item.UserId);
                    }
                    <p>Customer name:@username.UserName</p>
                    <a href="/home/detail?bookingid=@item.BId" class="btn">Detail</a>
                </div>
            </div>
        }
    </div>
</div>
@if (ViewBag.NoOfPages >= 1 || ViewBag.TotalRecords <= 5)
{
    <ul class="pagination justify-content-center mt-4">
        @{
            int PrevPage = ViewBag.Page - 1;
            if (PrevPage <= 0) PrevPage = 1;
            int NextPage = ViewBag.Page + 1;
            if (NextPage > ViewBag.NoOfPages) NextPage = ViewBag.NoOfPages;
        }

        <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="/home/checkin?courtId=@ViewBag.CourtID&page=@PrevPage&searchTerm=@ViewBag.SearchTerm&sortOrder=@ViewBag.SortOrder">Prev</a>
        </li>

        @for (int i = 1; i <= ViewBag.NoOfPages; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                <a class="page-link" href="/home/checkin?courtId=@ViewBag.CourtID&page=@i&searchTerm=@ViewBag.SearchTerm&sortOrder=@ViewBag.SortOrder">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.Page == ViewBag.NoOfPages ? "disabled" : "")">
            <a class="page-link" href="/home/checkin?courtId=@ViewBag.CourtID&page=@NextPage&searchTerm=@ViewBag.SearchTerm&sortOrder=@ViewBag.SortOrder">Next</a>
        </li>
    </ul>
}


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}
</body>