@model IEnumerable<BadmintonBooking.Models.Court>
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="book1">
    <div class="container container1">
        <div class="main-content">
            <h1 class="text-center">Badminton Court Information</h1>
            <img src="~/pictures/badmintoncourt.jpeg" class="main-image img-fluid" alt="Badminton Court Image">

            <form class="form-inline mt-3">
                <div class="form-group">
                    <input type="text" class="form-control mb-2 mr-sm-2" placeholder="Enter court name">
                </div>
                <div class="form-group">
                    <select class="form-select">
                        <option>Court A</option>
                        <option>Court B</option>
                        <option>Court C</option>
                        <option>Court D</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary ml-2 mb-2">Search</button>
            </form>

            <div class="court-item mt-4">
                @if (Model != null && Model.Any())
                {
                    foreach (var court in Model)
                    {
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="/Upload/Image/@court.CoPath" class="img-fluid" alt="@court.CoName">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@court.CoName</h5>
                                        <p class="card-text"><i class="fa-solid fa-location-dot"></i> @court.CoAddress</p>
                                        <p class="card-text"><i class="fa-solid fa-money-bill"></i> @court.CoPrice</p>
                                        <p class="card-text">@court.CoInfo</p>
                                        <p class="card-text"><strong>Status:</strong> @(court.CoStatus ? "Active" : "Inactive")</p>
                                        <form asp-action="UpdateBooking" asp-controller="Booking">
                                            <input type="hidden" name="CoId" value="@court.CoId"/>
                                            <button asp-action="Date" asp-controller="Home">Book</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        No courts available.
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/js/script.js"></script>
</body>
