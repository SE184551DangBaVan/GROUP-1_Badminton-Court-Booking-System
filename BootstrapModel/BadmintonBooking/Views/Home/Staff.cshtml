@model IEnumerable<BadmintonBooking.Models.Court>

@{
    ViewData["Title"] = "Staff";
    
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.5.2/css/all.css">
<partial name="_Notification" />
<style>
 * {
    margin: 0;
    padding: 0;

    box-sizing: border-box;
    font-family: sans-serif;
}



body {
    background-color: #242526;
    background-position: center;
    background-size: cover;
    line-height: 1.6;
    scroll-behavior: smooth;
    min-height: 120vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

main.table {
    width: 82vw;
    height: 90vh;
    background-color: #fff5;

    backdrop-filter: blur(7px);
    box-shadow: 0 .4rem .8rem #0005;
    border-radius: .8rem;

    overflow: hidden;
}

.table__header {
    width: 100%;
    height: 10%;
    background-color: #fff4;
    padding: .8rem 1rem;

    display: flex;
    justify-content: space-between;
    align-items: center;
}

.table__header .input-group {
    width: 70%;
    height: 60%;
    background-color: #fff5;
    padding: 0 .2rem;
    border-radius: 2rem;

    display: flex;
    justify-content: space-around;
    align-items: center;

    transition: .2s;
}

.table__header .input-group:hover {
    width: 75%;
    background-color: #fff8;
    box-shadow: 0 .1rem .4rem #0002;
}

.table__header .input-group img {
    width: 1.2rem;
    height: 1.2rem;
}

.table__header .input-group input {
    width: 60%;
    padding: 0 .5rem 0 .3rem;
    background-color: transparent;
    border: none;
    outline: none;
}

.table__body {
    width: 95%;
    max-height: calc(89% - 1.6rem);
    background-color: #fffb;

    margin: .8rem auto;
    border-radius: .6rem;

    overflow: auto;
    overflow: overlay;
}


.table__body::-webkit-scrollbar{
    width: 0.5rem;
    height: 0.5rem;
}

.table__body::-webkit-scrollbar-thumb{
    border-radius: .5rem;
    background-color: #0004;
    visibility: hidden;
}

.table__body:hover::-webkit-scrollbar-thumb{ 
    visibility: visible;
}


table {
    width: 100%;
}

td img {
    width: 36px;
    height: 36px;
    margin-right: .5rem;
    border-radius: 50%;

    vertical-align: middle;
}

table, th, td {
    border-collapse: collapse;
    padding: 1rem;
    text-align: left;
}

thead th {
    position: sticky;
    top: 0;
    left: 0;
    background-color: #d5d1defe;
    cursor: pointer;
    text-transform: capitalize;
}

tbody tr:nth-child(even) {
    background-color: #0000000b;
}

tbody tr {
    --delay: .1s;
    transition: .5s ease-in-out var(--delay), background-color 0s;
}

tbody tr.hide {
    opacity: 0;
    transform: translateX(100%);
}

tbody tr:hover {
    background-color: #fff6 !important;
}

tbody tr td,
tbody tr td p,
tbody tr td img {
    transition: .2s ease-in-out;
}

tbody tr.hide td,
tbody tr.hide td p {
    padding: 0;
    font: 0 / 0 sans-serif;
    transition: .2s ease-in-out .5s;
}

tbody tr.hide td img {
    width: 0;
    height: 0;
    transition: .2s ease-in-out .5s;
}

.status {
    padding: .4rem 0;
    border-radius: 2rem;
    text-align: center;
}

.status.delivered {
    background-color: #86e49d;
    color: #006b21;
}

.status.cancelled {
    background-color: #d893a3;
    color: #b30021;
}

.status.pending {
    background-color: #ebc474;
}

.status.shipped {
    background-color: #6fcaea;
}




thead th span.icon-arrow {
    display: inline-block;
    width: 1.3rem;
    height: 1.3rem;
    border-radius: 50%;
    border: 1.4px solid transparent;
    
    text-align: center;
    font-size: 1rem;
    
    margin-left: .5rem;
    transition: .2s ease-in-out;
}

thead th:hover span.icon-arrow{
    border: 1.4px solid #6c00bd;
}

thead th:hover {
    color: #6c00bd;
}

thead th.active span.icon-arrow{
    background-color: #6c00bd;
    color: #fff;
}

thead th.asc span.icon-arrow{
    transform: rotate(180deg);
}

thead th.active,tbody td.active {
    color: #6c00bd;
}

.search-container {
    display: flex;
    flex-direction: row;
    width: 50%;
    justify-content: space-around;
    align-items: center;
}

.input-group {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #fff5;
    border-radius: 2rem;
    padding: 0 0.8rem;
    transition: all 0.2s ease;
}

.input-group:hover {
    background-color: #fff8;
    box-shadow: 0 0.1rem 0.4rem #0002;
}

.input-group input {
    border: none;
    outline: none;
    padding: 0.5rem;
    background-color: transparent;
}

.search-icon {
    display: flex;
    align-items: center;
    padding-left: 0.5rem;
}

.search-GO {
    border-style: none;
    border-radius: 15px;
    outline: 1px solid;
    outline-color: black;
    background: brown;
    color: white;
    padding: 0.2rem 1rem;
    transition: 0.3s ease;
    cursor: pointer;
    margin-left: 10px;
}

.search-GO:hover {
    background: brown;
    text-shadow: 4px 2px 3px rgba(0, 0, 0, 1);
    box-shadow: 2px 4px 6px rgba(128, 0, 0, 1);
}
    


</style>

<body>
    <script src="~/js/script.js"></script>
    <main class="table" style="margin-top: 350px;" id="customers_table">
        <section class="table__header">
            <h1>Staff's Court Management</h1>
            <form method="get" action="@Url.Action("Staff", "Home")">
                <div class="search-container" style="display: flex; width: 100%; align-items: center; justify-content: space-around;">
                    <div class="input-group">
                        <input type="search" name="searchTerm" placeholder="Search Data...">
                        <div class="search-icon">
                            <i class="fa-regular fa-magnifying-glass fa-lg"></i>
                        </div>
                    </div>
                    <button type="submit" class="search-GO">GO</button>

                </div>

            </form>
            
        </section>
        <section class="table__body">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Address</th>
                        <th>Info</th>
                        <th>Check In/Total</th>
                        <th>Booking</th>
                        <th>Quality</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- <tr>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td>
                            <p class="status delivered">Delivered</p>
                        </td>
                        <td> <strong> price </strong></td>
                    </tr> -->
                    @foreach (var item in Model)
                    {
                        DemobadmintonContext context = new DemobadmintonContext();
                        DateOnly currentDate = DateOnly.FromDateTime(DateTime.Now);
                        //TimeOnly currentTime = TimeOnly.FromDateTime(DateTime.Now);
                        int checkIn = context.TimeSlots.Where(ts => ts.CoId == item.CoId && ts.TsCheckedIn == true && ts.TsDate >= currentDate).Count();
                        int total = context.TimeSlots.Where(ts => ts.CoId == item.CoId && ts.TsDate >= currentDate).Count();

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CoId)</td>
                            <td>@Html.DisplayFor(modelItem => item.CoName)</td>
                            <td><img src="~/Upload/Image/@item.CoPath" alt="Court Image" class="court-image" /></td>
                            <td>@Html.DisplayFor(modelItem => item.CoAddress)</td>
                            <td>@Html.DisplayFor(modelItem => item.CoInfo)</td>
                            <td>@checkIn /  @total</td>
                            <td>
                                <a href="@Url.Action("CheckIn", "Home", new { courtId = item.CoId })" class="action-link">See more booking</a>
                            </td>
                            <td>
                                <a asp-action="CourtQualityCheck" asp-controller="Home" asp-route-CoId="@item.CoId" class="rate-btn-primary">Report quality</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </main>
</body>
@if (ViewBag.NoOfPages >= 1 || ViewBag.TotalRecords <= 5)
{
    <ul class="pagination justify-content-center mt-4">
        @{
            int PrevPage = ViewBag.Page - 1;
            if (PrevPage <= 0) PrevPage = 1;
            int NextPage = ViewBag.Page + 1;
            if (NextPage > ViewBag.NoOfPages) NextPage = ViewBag.NoOfPages;
        }

        <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="/Home/Staff?page=@PrevPage&searchTerm=@ViewBag.SearchTerm">Prev</a>
        </li>

        @for (int i = 1; i <= ViewBag.NoOfPages; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                <a class="page-link" href="/Home/Staff?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.Page == ViewBag.NoOfPages ? "disabled" : "")">
            <a class="page-link" href="/Home/Staff?page=@NextPage&searchTerm=@ViewBag.SearchTerm">Next</a>
        </li>
    </ul>
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}
