
@{
    ViewData["Title"] = "_AdminLayout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.6/signalr.min.js"></script>
    <title>Admin</title>

    <style>

        .table th, .table td {
            vertical-align: middle;
        }

        .table img {
            max-width: 150px;
            max-height: 150px;
            object-fit: cover;
        }

        .header-btn {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navigation {
            background-color: #343a40;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 60px;
            overflow-y: auto;
            overflow-x: hidden;
            backdrop-filter: blur(0px);
            transition: width 0.4s ease, backdrop-filter 0.4s ease;
            z-index: 1000;
        }

        .navigation-bg {
            background-color: transparent;
            backdrop-filter: none;
            visibility: hidden;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 999;
            transition: background-color 0.4s ease, backdrop-filter 0.4s ease;
        }

        .navigation-bg.maximizes {
            background-color: rgba(250, 250, 250, 0.2);
            backdrop-filter: blur(5px);
            visibility: visible;
            transition: background-color 0.4s ease, backdrop-filter 0.4s ease;
        }

        .navigation.maximizes {
            width: 250px;
            transition: all 0.3s ease;
        }

            .navigation .nav {
                flex-direction: column;
                height: 100%;
                padding-top: 50px;
                transition: visibility 0.3s ease;
            }

            .navigation .nav-item {
                visibility: visible;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: left;
            }

            .navigation .nav-link {
                visibility: hidden;
                width: 100%;
                display: flex;
                align-items: center;
                padding: 15px;
                color: #fff;
                text-decoration: none;
                justify-content: left;
                transition: background-color 0.3s ease, visibility 0.4s ease;
            }

                .navigation .nav-link:hover {
                    background-color: #495057;
                }

            .navigation .nav-link.maximizes {
                visibility: visible;
                transition: visibility 0.3s ease;
            }

            .navigation .icon {
                margin: 0;
                font-size: 2em;
                visibility: hidden;
                transition: visibility 0.3s ease;
            }

        .navigation.maximizes .icon {
            visibility: visible;
            font-size: 1.5em;
            margin-right: 10px;
            transition: visibility 0.3s ease;
        }

            .navigation .title {
                opacity: 0;
                font-size: 1.1em;
                transition: opacity 0.4s ease;
            }

        .navigation.maximizes .title {
            opacity: 1;
            transition: opacity 0.4s ease;
        }

        .content {
            flex: 1;
            padding: 20px;
        }

        .toggle-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            background: none;
            border: none;
            color: white;
            font-size: 1.5em;
            cursor: pointer;
            z-index: 1001; /* Above the navigation menu */
        }

    </style>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleBtn = document.querySelector('.toggle-btn');
            const navigation = document.querySelector('.navigation');
            const navigationBG = document.querySelector('.navigation-bg');
            const navLinks = document.querySelectorAll('.nav-link');

            toggleBtn.addEventListener('click', function () {
                navigation.classList.toggle('maximizes');
                navigationBG.classList.toggle('maximizes');
                toggleBtn.classList.toggle('fa-xmark');
                toggleBtn.classList.toggle('fa-bars');

                navLinks.forEach(link => {
                    link.classList.toggle('maximizes');
                });
            });
        });
    </script>
</head>
<body>
    <button class="toggle-btn fa fa-bars"></button>
    <div class="navigation-bg"></div>
    <div class="navigation">
        <ul class="nav flex-column bg-dark text-white">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                    <span class="icon">
                        <ion-icon name="grid-outline"></ion-icon>
                    </span>
                    <span class="title">Home Screen</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Show">
                    <span class="icon">
                        <ion-icon name="home-outline"></ion-icon>
                    </span>
                    <span class="title">Court Management</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/CustomerInfo">
                    <span class="icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </span>
                    <span class="title">Account</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">
                    <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </span>
                    <span class="title">Sign Out</span>
                </a>
            </li>
        </ul>
    </div>
    <main role="main" class="">
        @RenderBody()
    </main>
    <script src="~/js/signalr.js"></script>

</body>
</html>

