@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-6 mt-5" style="padding-top: 220px;">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item1">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>

                    </li>
                    <li class="nav-item2">
                        <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>

                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div action="col-8 offset-2">
                        @RenderBody()
                    </div>

                    <div />
                </div>
            </div>
        </div>
    </div>
    @section scripts {
        @await RenderSectionAsync("Scripts", required: false)
    }
