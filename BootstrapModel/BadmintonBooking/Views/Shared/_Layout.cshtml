@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager;
@inject UserManager<IdentityUser> UserManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BadmintonBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.1.0/typed.umd.js"></script>
    <link rel="stylesheet" href="~/demobadminton.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
          rel="stylesheet" />
          <!--Add Toastr Notification-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.6/signalr.min.js"></script>
   

</head>
<body>
    <header>
    <nav class="navBar">
        <div class="nav-container">
            <div class="logo">
                <svg>
                    <text x="50%" y="50%" dy=".35em" text-anchor="middle">
                        Freedom Court<span>.</span>
                    </text>
                </svg>
            </div>
            <ul class="nav-direct">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a href="#bookingInformation">Information</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                <li>
                    <a href="#" class="desktop-item">Notice</a>
                    <input type="checkbox" id="showMega">
                    <label for="showMega" class="mobile-item">Notice</label>
                    <div class="mega-box">
                        <div class="content">
                            <div class="row">
                                <img src="~/images/open-badminton-tournament.jpg" alt="">
                            </div>
                            <div class="row">
                                <header>Headlines</header>
                                <ul class="mega-links">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <li><a asp-controller="Home" asp-action="BookingHistory"><i class="fa-solid fa-clock-rotate-left"></i>Booking History</a></li>
                                            <li><a asp-controller="Home" asp-action="UpComingEvent"><i class="fa-regular fa-calendar-days"></i>UpComing Event</a></li>
                                        }
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                @if (SignInManager.IsSignedIn(User) &&  User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Manage
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Administration"
                               asp-action="ListUsers">Users</a>
                            <a class="dropdown-item" asp-controller="Administration"
                               asp-action="ListRoles">Roles</a>
                        </ul>
                    </li>
                }
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </nav>
</header>


    <main role="main" class="pb-3">
        @RenderBody()
    </main>



    <footer class="border-top footer text-muted">
        <div class="footer-container" style="width: 100%; display: flex; justify-content: center;">
            &copy; 2024 - BadmintonBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
