@using BadmintonBooking.ViewModels;
@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        color: #333; /* Dark gray text */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Default font stack */
    }

    .container {
        margin-top: 200px;
        background-color: #fff; /* White container background */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1); /* Light shadow for container */
    }

    h2 {
        color: #007bff; /* Blue heading */
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5rem; /* Larger heading font size */
        font-weight: bold; /* Bold heading */
        text-transform: uppercase; /* Uppercase heading */
    }

    label.control-label {
        font-size: 1.2rem; /* Larger font size for labels */
        font-weight: bold; /* Bold labels */
    }

    .form-control {
        border-color: #ccc; /* Light gray border for inputs */
        font-size: 1rem; /* Regular font size for inputs */
    }

        .form-control:focus {
            border-color: #007bff; /* Focus border color */
            box-shadow: none; /* Remove default focus box-shadow */
        }

    .btn-primary {
        background-color: #007bff; /* Blue primary button */
        border-color: #007bff;
        font-size: 1.2rem; /* Larger font size for buttons */
        padding: 10px 20px; /* Increased padding */
    }

        .btn-primary:hover, .btn-primary:focus {
            background-color: #0056b3; /* Darker blue on hover/focus */
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d; /* Gray secondary button */
        border-color: #6c757d;
        font-size: 1.2rem; /* Larger font size for buttons */
        padding: 10px 20px; /* Increased padding */
    }

        .btn-secondary:hover, .btn-secondary:focus {
            background-color: #5a6268; /* Darker gray on hover/focus */
            border-color: #5a6268;
        }

    .alert-danger {
        color: #721c24; /* Dark red text for validation summary */
        background-color: #f8d7da; /* Light red background for validation summary */
        border-color: #f5c6cb; /* Light red border for validation summary */
        font-size: 1.1rem; /* Font size for validation summary */
        padding: 10px; /* Padding for validation summary */
        margin-bottom: 20px; /* Bottom margin for separation */
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Shadow for images */
    }
</style>

<body>
    <script src="~/js/updatecourtvalidate.js"></script>
    <div class="container mt-10 mb-5">
        <h1>Edit User</h1>
        <hr />
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input asp-for="Id" type="hidden" disabled class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label" style="width: 10%;"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label" style="width: 15%;"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="rate-backbtn">Update</button>
                            <a asp-action="CustomerInfo" asp-controller="Admin" class="rate-backbtn">Cancel</a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h3>User Roles</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.Roles.Any())
                            {
                                foreach (var role in Model.Roles)
                                {
                                    <h5 class="card-title">@role</h5>
                                }
                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="ManageUserRoles" asp-controller="Admin" style="width:auto; color: white;" asp-route-UserId="@Model.Id"
                               class="qualityHistoryBtn">
                                Manage Roles
                            </a>
                        </div>
                    </div>
                    @* <div class="card mt-3">
                        <div class="card-header">
                            <h3>User Claims</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.Claims.Any())
                            {
                                foreach (var claim in Model.Claims)
                                {
                                    <h5 class="card-title">@claim</h5>
                                }
                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a href="#" style="width:auto" class="btn btn-primary">
                                Manage Claims
                            </a>
                        </div>
                    </div> *@
                </form>
            </div>
        </div>
    </div>