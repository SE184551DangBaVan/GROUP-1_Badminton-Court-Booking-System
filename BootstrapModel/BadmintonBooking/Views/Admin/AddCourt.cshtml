@model BadmintonBooking.Models.Court

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Court</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="card-title mb-0">Create Court</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddCourt" asp-controller="Admin" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="CoName" class="control-label"></label>
                                <input asp-for="CoName" class="form-control" />
                                <span asp-validation-for="CoName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoAddress" class="control-label"></label>
                                @Html.DropDownListFor(modelItem => modelItem.CoAddress, new[] {
                                new SelectListItem { Text = "Other", Value = "Other" },
                                new SelectListItem { Text = "District 1", Value = "District 1" },
                                new SelectListItem { Text = "District 2", Value = "District 2" },
                                new SelectListItem { Text = "District 3", Value = "District 3" },
                                new SelectListItem { Text = "District 4", Value = "District 4" },
                                new SelectListItem { Text = "District 5", Value = "District 5" },
                                new SelectListItem { Text = "District 6", Value = "District 6" },
                                new SelectListItem { Text = "District 7", Value = "District 7" },
                                new SelectListItem { Text = "District 8", Value = "District 8" },
                                new SelectListItem { Text = "District 9", Value = "District 9" },
                                new SelectListItem { Text = "District 10", Value = "District 10" },
                                new SelectListItem { Text = "District 11", Value = "District 11" },
                                new SelectListItem { Text = "District 12", Value = "District 12" },
                                new SelectListItem { Text = "Bình Tân", Value = "Bình Tân" },
                                new SelectListItem { Text = "Bình Thạnh", Value = "Bình Thạnh" },
                                new SelectListItem { Text = "Gò Vấp", Value = "Gò Vấp" },
                                new SelectListItem { Text = "Phú Nhuận", Value = "Phú Nhuận" },
                                new SelectListItem { Text = "Tân Bình", Value = "Tân Bình" },
                                new SelectListItem { Text = "Tân Phú", Value = "Tân Phú" },
                                new SelectListItem { Text = "Thủ Đức", Value = "Thủ Đức" },
                                new SelectListItem { Text = "Bình Chánh", Value = "Bình Chánh" },
                                new SelectListItem { Text = "Cần Giờ", Value = "Cần Giờ" },
                                new SelectListItem { Text = "Củ Chi", Value = "Củ Chi" },
                                new SelectListItem { Text = "Hóc Môn", Value = "Hóc Môn" },
                                new SelectListItem { Text = "Nhà Bè", Value = "Nhà Bè" },
                                new SelectListItem { Text = "Thủ Đức City", Value = "Thủ Đức City" }
                                }, "Select District", new { @class = "form-control" })
                                <span asp-validation-for="CoAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoInfo" class="control-label"></label>
                                <textarea asp-for="CoInfo" class="form-control"></textarea>
                                <span asp-validation-for="CoInfo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoPrice" class="control-label"></label>
                                <input asp-for="CoPrice" class="form-control" />
                                <span asp-validation-for="CoPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImagePath" class="control-label">Image Path</label>
                                <input type="file" class="form-control" asp-for="ImagePath" id="ChooseImg" />
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <img src="https://placehold.jp/150x150.png" class="img-thumbnail" style="width:200px; height:200px;" alt="Placeholder Image" id="PrevImg" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="Show" asp-controller="Admin" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>


    @section scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="~/js/admincourtt.js"></script>
    }
</body>
</html>
