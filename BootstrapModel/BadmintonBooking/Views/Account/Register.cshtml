@using demobadminton.ViewModels
@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}
<form method="post" asp-action="Register" asp-asp-controller="Account">
    <h3 class="text-muted mb-1" style="font:20px">Create an account</h3>
    <hr/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="mb-2" asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email"  placeholder="Enter email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="mb-2" asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="mb-2" asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Enter confirm password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="float-end">
        <button type="submit" class=" btn btn-primary m-2">Register</button>
    </div>



</form>
@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml"/>
}