@using BadmintonBooking.ViewModels
@model ResendEmailConfirmationVM
@using Microsoft.AspNetCore.Identity
@inject RoleManager<IdentityRole> RoleManager

@{
    ViewData["Title"] = "Resend Email Confirmation";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
<partial name="_Notification" />
<h2>Resend Email Confirm</h2>
<form asp-action="ResendEmailConfirmation" asp-asp-controller="account" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Send</button>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}